<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apppage_menu_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
     >

    <ImageView
        android:id="@+id/apppage_menuitem_icon"
        android:layout_width="90px"
        android:layout_height="90px"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/menuitem_icon_margin_left"
        android:layout_marginRight="@dimen/menu_icon_margin_right"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/apppage_menuitem_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:singleLine="true"
        android:textColor="#FFFF" />

</LinearLayout>