<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center"    android:orientation="vertical" >    <LinearLayout        android:layout_width="@dimen/app_item_linearlayout_width"        android:layout_height="@dimen/app_item_linearlayout_height"        android:gravity="center"        android:background="@drawable/app_bkground"        android:orientation="vertical" >        <ImageView            android:id="@+id/app_item_icon"            android:layout_width="@dimen/app_item_appicon_width"            android:layout_height="@dimen/app_item_appicon_height"            android:layout_marginTop="@dimen/app_item_appicon_margin_top"/>        <TextView            android:id="@+id/app_item_title"            android:layout_width="@dimen/app_item_appicon_width"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/app_item_title_margin_top"            android:gravity="center"            android:ellipsize="marquee"            android:marqueeRepeatLimit="marquee_forever"            android:singleLine="true"            android:textColor="@color/whiteColor"            android:textSize="@dimen/app_item_apptitle_textSize" />    </LinearLayout></LinearLayout><!-- <?xml version="1.0" encoding="utf-8"?> --><!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" --><!--     xmlns:tools="http://schemas.android.com/tools" --><!--     android:layout_width="@dimen/app_item_linearlayout_width" --><!--     android:layout_height="@dimen/app_item_linearlayout_height" --><!--     android:background="@drawable/app_bkground" --><!--     android:gravity="center_horizontal" --><!--     android:orientation="vertical" --><!--     android:paddingBottom="@dimen/app_item_padding_bottom" --><!--     android:paddingTop="@dimen/app_item_padding_top" >